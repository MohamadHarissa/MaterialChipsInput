<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.sample.materialchipsinput.ContactListActivity">



    <com.materialchips.ChipsInput
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_border_grey"
        android:id="@+id/chips_input"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        app:fontSize="10sp"
        app:isHorizontal="true"
        app:chip_hasAvatarIcon="false"
        app:chip_deleteIcon="@mipmap/cross"
        app:chip_deletable="true"
        app:chip_background="@drawable/round_rect_blue"
        app:showChipDetailed="false"
        app:chip_labelColor="@android:color/white" />

    <Button
        android:id="@+id/validate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Validate" />

    <TextView
        android:id="@+id/chip_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

</LinearLayout>
